{
  "manifest_version": 2,

  "name": "wonder-browser-extension",
  "description": "TODO desc and name too",
  "version": "0.0.1",

  
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "WonderSourcing parse plugin\nTODO this title"
  },
  "icons": {
    "16": "img/favicon-32x32.png",
    "32": "img/favicon-32x32.png",
    "48": "img/favicon-32x32.png",
    "128": "img/favicon-32x32.png"
  },
  "permissions": [
    "*://*.wondersourcing.ru/*",
    "storage",
    "cookies",
    "tabs",
    "notifications"
  ],
  "web_accessible_resources": [
    "img/wondersourcing-logo.svg"
  ],
  "content_scripts":[
    {
      "matches":[
        "*://github.com/*",
        "*://github.io/*",
        "*://vk.com/*",
        "*://twitter.com/*",
        "*://stackoverflow.com/*",
        "*://ru.stackoverflow.com/*",
        "*://habr.com/*",
        "*://habrahabr.ru/*",
        "*://toster.ru/*",
        "*://facebook.com/*",
        "*://fb.com/*",
        "*://linkedin.com/*",
        "*://behance.net/*",
        "*://dribbble.com/*",
        "*://moikrug.ru/*"
      ],
      "js":[
        "js/pako.min.js",
        "js/dumperHTML.js"
      ]
    }
  ],
  "background": {
    "persistent": false,
    "scripts": [ "js/background.js" ]
  },
  "content_security_policy": "object-src 'self' 'sha256-cUx7maUS4dOhO4zvgCAqr+PiU/iDdBml7cj03bGh9yg=';script-src 'self' 'sha256-cUx7maUS4dOhO4zvgCAqr+PiU/iDdBml7cj03bGh9yg='; style-src-elem 'self' 'unsafe-inline' https://fonts.googleapis.com; style-src 'self' 'sha256-cUx7maUS4dOhO4zvgCAqr+PiU/iDdBml7cj03bGh9yg='"
}